

<h1 class="text-center text-primary">Iniciar sesión</h1>

<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <form action="/Login/Login" method="post">
            <div class="form-group">
                <label>Usuario</label>
                <input type="text" name="Username" value="" class="form-control" autocomplete="off" />
            </div>
            <div class="form-group">
                <label>Contraseña</label>
                <input type="password" name="Password" value="" class="form-control" autocomplete="off" />
            </div>
            @if (ViewBag.LoginError != null)
            {
                    <div class="alert alert-danger">
           @ViewBag.LoginError
              </div>           
              }
            <button type="submit" class="btn btn-primary">Ingresar</button>
        </form>
    </div>
    <div class="col-3"></div>
</div>
