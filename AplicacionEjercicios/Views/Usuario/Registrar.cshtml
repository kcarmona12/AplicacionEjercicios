<h1 class="text-center text-success">Registrar usuario</h1>

<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <form action="/Usuario/Registrar" method="post">
            <div class="form-group">
                <label> Usuario</label>
                    <input type="text" name="Username" value="" class="form-control" autocomplete="off" />
            </div>
            <div class="form-group">
                <label>Contraseña</label>
                <input type="password" name="Password" value="" class="form-control" autocomplete="off" />
            </div>
            <span class="text-danger">@Html.ValidationMessage("Error")</span>
            <br />
            <button type="submit" class="btn btn-success">Registrar</button>
        </form>
    </div>
    <div class="col-3"></div>
</div>